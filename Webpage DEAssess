import { motion } from 'framer-motion';

const AnimatedBox = () => {
  return (
    <motion.div
      initial={{ opacity: 0, y: -50 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 1 }}
    >
      <div style={{ width: '100px', height: '100px', background: 'blue' }}>
        Your Content Goes Here
      </div>
    </motion.div>
  );
};

export default AnimatedBox;

